module rca(
  input [3:0] a, b ,  //defining the inputs and the output
  input cin,
  output [3:0} s,
  output c
  );
  wires [4, 0] w;
  assign w[0] = cin;
  //instanciating and mapping the ports 
  fa dut1 (.a(a[0]), .b(b[0]), .c(w[0]), .s(s[0]), cout(w[1]));
  fa dut2 (.a(a[1]), .b(b[1]), .c(w[1]), .s(s[1]), cout(w[3]));
  fa dut3 (.a(a[2]), .b(b[2]), .c(w[2]), .s(s[2]), cout(w[3]));
  fa dut4 (.a(a[3]), .b(b[3]), .c(w[3]), .s(s[3]), cout(w[4]);
  assign cout = c[4];
endmodule
  
  
    
